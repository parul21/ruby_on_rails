<%= form_with model: @movie ,mode: @review, url: movie_reviews_path, local: true  do |form| %>
  

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit() %>
  </div>
<% end %>
